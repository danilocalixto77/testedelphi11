begin
  if Edit1.Text <> '' then
  begin

  end;

end;

procedure TFTeste.FormKeyPress(Sender: TObject; var Key: Char);
begin
   if Key=#13 then
   begin
     if ActiveControl is TEdit then
     begin
       with TEdit(ActiveControl).Parent do
         SelectNext(ActiveControl, True, True)
     end;
     Key := #0;
   end;
end;

end.
